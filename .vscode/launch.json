    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Odoo Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "args": [
                "-c", "odoo.conf",
                "--dev", "all"  // dev mode / reboot after save
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // Add project core to PYTHONPATH
            }
        },
        {
            "name": "Odoo Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/odoo/odoo-bin",
            "args": [
                "-c", "odoo_test.conf",
                "-i", "mobilephones,openacademy",
                // "-u", "mobilephones,openacademy",
                // "--test-enable",
                "--test-tags", "/mobilephones,/openacademy",
                "--stop-after-init"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"  // Add project core to PYTHONPATH
            }
        }
    ]
}