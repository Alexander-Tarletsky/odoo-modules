<odoo>
    <data>
        <!-- Settings -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.openacademy</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <app data-string="Open Academy" string="Open Academy" name="openacademy" groups="openacademy.openacademy_manager_group">
                        <block title="General Settings" name="general_settings_container">
                            <setting id="openacademy_res_config_settings_company_open_setting_view_form" 
                                     title="Company Status" 
                                     help="Change this value to close/open OA Company and allow participants to sign up for sessions.">
                                <field name="company_is_open"/>
                            </setting>
                            
                            <setting id="openacademy_res_config_settings_default_responsible_setting_view_form" 
                                     title="Default Responsible" 
                                     help="Set global default responsible for courses."
                                     company_dependent="1">
                                <field name="default_responsible_id" 
                                       domain="['|', ('company_id', '=', False), ('company_id', '=', company_id)]"
                                       context="{'default_company_id': company_id}"/>
                            </setting>
                        </block>
                    </app>
                </xpath>
            </field>
        </record>

        <record id="openacademy_configs_action" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : "openacademy"}</field>
        </record>

        <menuitem id="openacademy_settings_menu" name="Settings" parent="openacademy_base_menu"
                  sequence="37" action="openacademy_configs_action" />

    </data>
</odoo>
