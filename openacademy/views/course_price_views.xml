<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Course Price Views -->
        <record id="course_price_view_tree" model="ir.ui.view">
            <field name="name">Course Price List</field>
            <field name="model">openacademy.course.price</field>
            <field name="arch" type="xml">
                <list>
                    <field name="course_id"/>
                    <field name="company_id"/>
                    <field name="price"/>
                    <field name="currency_id"/>
                </list>
            </field>
        </record>
        
        <record id="course_price_view_form" model="ir.ui.view">
            <field name="name">Course Price Form</field>
            <field name="model">openacademy.course.price</field>
            <field name="arch" type="xml">
                <form string="Course Price">
                    <sheet>
                        <group>
                            <group>
                                <field name="course_id"/>
                                <field name="company_id"/>
                            </group>
                            <group>
                                <field name="price"/>
                                <field name="currency_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="course_price_view_search" model="ir.ui.view">
            <field name="name">Course Price Search</field>
            <field name="model">openacademy.course.price</field>
            <field name="arch" type="xml">
                <search>
                    <field name="course_id"/>
                    <field name="company_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Course" name="course" context="{'group_by':'course_id'}"/>
                        <filter string="Company" name="company" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Actions -->
        <record id="course_price_list_action" model="ir.actions.act_window">
            <field name="name">Course Prices</field>
            <field name="res_model">openacademy.course.price</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menus -->
        <menuitem id="course_price_menu" name="Course Prices" parent="openacademy_courses_menu"/>
        <menuitem id="course_price_menu_action" name="Course Prices" parent="course_price_menu" action="course_price_list_action"/>
    </data>
</odoo>